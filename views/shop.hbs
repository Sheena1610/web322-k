<div class="row">
  {{#if data.post}}
    <section class="main col-md-9">
      <item>
        <div class="row">
          <div class="col-4">
            <h2>{{data.post.title}}</h2>
            <img src="{{data.post.featureImage}}" alt="feature Image" style="width:100%" />
          </div>

          <div class="col-8"><br /><br />
            <div class="row">
              <div class="col-12">
                {{{safeHTML data.post.body}}}
                <br /><br />
                <strong>Price:</strong> $ {{data.post.price}}<br />
                <strong>Category:</strong> {{data.post.category}}<br />
                <strong>Last Updated:</strong> {{#formatDate postDate}}{{/formatDate}}
              </div>
            </div>
          </div>
        </div>
      </item>
    </section>
  {{else}}
    <div class="col-md-12 text-center">
      <h2>{{data.message}}</h2>
      <p>Please try another Post / Category</p>
    </div>
  {{/if}}

  <aside class="col-md-3">
    <br /><br />
    {{#if data.posts}}
      <h4>Items</h4>
      <ul class="list-group">
        {{#each data.posts}}
          <a href="/shop/{{id}}?category={{../viewingCategory}}" class="list-group-item">{{title}}</a>
        {{/each}}
      </ul>
    {{/if}}

    {{#if data.categories}}
      <h4>Categories</h4>
      <ul class="list-group">
        {{#each data.categories}}
          <a href="/shop?category={{id}}" class="list-group-item">{{name}}</a>
        {{/each}}
      </ul>
    {{/if}}
  </aside>
</div>
