<div class="row">
  <div class="col-md-12">
    <h2>Categories</h2>
    <a href="/categories/add" class="btn btn-success pull-right">Add Category</a>
    <hr />
    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Category ID</th>
            <th>Category</th>
          </tr>
        </thead>
        <tbody>
          {{#each Categories}}
            <tr>
              <td>{{this.id}}</td>
              <td>{{this.category}}</td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-md-12 text-center">
      {{#unless Categories}}
        <strong>No results</strong>
      {{/unless}}
    </div>
  </div>
</div>
