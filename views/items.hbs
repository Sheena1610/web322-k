<div class="row">
  <div class="col-md-12">
    <h2>Items</h2>
    <a href="/items/add" class="btn btn-success pull-right">Add Post</a>
    <hr />
    <div class="table-responsive">
      <table class="table table-striped">
       
        <thead>
          <tr>
            <th>Item ID</th>
            <th>Title</th>
            <th>Post Date</th>
            <th>Price</th>
            <th>Category</th>
            <th>Published</th>
            <th></th> 
          </tr>
        </thead>
        <tbody>
          {{#each items}}
          <tr>
            <td>{{this.id}}</td>
            <td>{{this.title}}</td>
            <td>{{#formatDate postDate}}{{/formatDate}}</td>
            <td>{{this.price}}</td>
            <td><a href="/items?category={{this.category}}">{{this.category}}</a></td>
            <td>{{this.published}}</td>
            <td>
              <form action="/Items/delete/{{this.id}}" method="get">
                <button type="submit" class="btn btn-danger">remove</button>
              </form>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="col-md-12 text-center">
      {{#unless items}}
      <strong>{{message}}</strong>
      {{/unless}}
    </div>
  </div>
</div>
